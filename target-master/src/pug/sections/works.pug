               .works-slider__box
                  .works-slider__group
                     .works-slider__image(data-hystmodal="#case-modal1")
                        +picture("./assets/img/works/img1.png", "./assets/img/works/img1.webp")
                     p.works-slider__text Продвижение клуба гимнастики
                  .works-slider__group
                     .works-slider__image(data-hystmodal="#case-modal2")
                        +picture("./assets/img/works/img2.png", "./assets/img/works/img2.webp")
